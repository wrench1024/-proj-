{
  "name": "regdoc",
  "version": "1.0.0",
  "description": "文档智能处理系统 - 集成前端Vue3应用和后端FastAPI服务",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "build": "cd frontend && npm run build",
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "find backend -name \"__pycache__\" -type d -exec rm -rf {} + 2>/dev/null || true"
  },
  "keywords": [
    "vue3",
    "fastapi",
    "document-processing",
    "ai",
    "knowledge-base",
    "water-resources"
  ],
  "author": "RegDoc Team",
  "license": "PRIVATE",
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  }
}
